{
  "name": "reactite",
  "version": "0.0.3",
  "description": "This is a simple react-native orm for sqlite3.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --detectOpenHandles",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "lint": "yarn add react --dev && tsc && npx standard --fix && yarn remove react",
    "ci": "yarn lint && yarn test && yarn build",
    "release": "yarn lint && yarn test && yarn build && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CrispenGari/reactite.git"
  },
  "keywords": [
    "react-native",
    "orm",
    "sqlite3",
    "expo",
    "react-native-sqlite3"
  ],
  "author": "Crispen Gari <crispengari@gmail.com> (https://crispen-gari.web.app/#/home)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CrispenGari/reactite/issues"
  },
  "homepage": "https://github.com/CrispenGari/reactite#readme",
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "standard": {
    "env": [
      "mocha",
      "commonjs",
      "node",
      "jest"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.24.7",
    "@changesets/cli": "^2.27.7",
    "@swc/core": "^1.7.10",
    "@types/node": "^22.2.0",
    "jest": "^29.7.0",
    "standard": "^17.1.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "expo": "^51.0.26",
    "react-native": "^0.74.5"
  },
  "dependencies": {
    "expo-sqlite": "^14.0.6"
  }
}
